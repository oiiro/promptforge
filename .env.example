# PromptForge Environment Configuration
# Copy this file to .env and configure with your settings

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Choose your primary LLM provider: openai, anthropic
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-org-id-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# Security and Compliance Settings
# =============================================================================

# Enable PII detection and redaction
ENABLE_PII_REDACTION=true

# Enable comprehensive audit logging
ENABLE_AUDIT_LOGGING=true

# Enable advanced guardrails
ENABLE_ADVANCED_GUARDRAILS=true

# Enable toxicity detection
ENABLE_TOXICITY_DETECTION=true

# =============================================================================
# API Server Configuration
# =============================================================================

# Server settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Authentication settings
DEFAULT_API_TOKEN=demo-token

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# =============================================================================
# Environment Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode
DEBUG_MODE=true

# =============================================================================
# Quality Thresholds
# =============================================================================

# Accuracy threshold (0.0 - 1.0)
ACCURACY_THRESHOLD=0.95

# Confidence threshold (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.80

# Response time limit (milliseconds)
RESPONSE_TIME_LIMIT=2000

# Toxicity threshold (0.0 - 1.0)
TOXICITY_THRESHOLD=0.1