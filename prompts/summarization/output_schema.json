{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Summarization Output Schema",
  "description": "Schema for document summarization responses",
  "properties": {
    "summary": {
      "type": "string",
      "description": "Concise summary of the document",
      "minLength": 10,
      "maxLength": 2000
    },
    "key_points": {
      "type": "array",
      "description": "List of key points extracted from the document",
      "items": {
        "type": "string",
        "minLength": 5,
        "maxLength": 200
      },
      "minItems": 1,
      "maxItems": 10
    },
    "word_count": {
      "type": "integer",
      "description": "Number of words in the summary",
      "minimum": 1,
      "maximum": 1000
    },
    "confidence": {
      "type": "number",
      "description": "Confidence score of the summary quality",
      "minimum": 0,
      "maximum": 1
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the summarization process",
      "properties": {
        "source_length": {
          "type": "integer",
          "description": "Length of the original document in characters"
        },
        "compression_ratio": {
          "type": "number",
          "description": "Ratio of summary length to original length",
          "minimum": 0,
          "maximum": 1
        },
        "processing_time": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the summary was generated"
        }
      }
    }
  },
  "required": ["summary", "key_points", "word_count", "confidence"],
  "additionalProperties": false
}